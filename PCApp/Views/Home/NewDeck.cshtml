@model IEnumerable<PCApp.Models.Card>

@{
    ViewBag.Title = "New Deck";
    string sID;
}

<h2>New Deck</h2>
<div class="container">
    @* Submition *@
    <div class="row">
        <div class="col-lg-4">
            <h5>Deck Name:</h5>
            <input id="DeckName" class="MyBlock" type="text" />
            <input id="SubmitDeck" type="button" class="MyBlock" onclick="sendArray();" value="Save Deck" />
        </div>
    </div>
</div>
<hr />
<div class="container">
    @* Column Headers *@
    <div class="row">
        <div class="col-lg-3">
            <h4>Card Info</h4>
        </div>
        <div class="col-lg-6">
            <h4>Image</h4>
        </div>
        <div class="col-lg-3">
            <h4>Deck List</h4>
            <input class="MyBlock" type="button" onclick="removeText();" value="Remove Card From Deck" />
        </div>
    </div>
</div>
<hr />
<div class="container col-lg-9">
    @* Actual Info *@
    @foreach (var item in Model)
    {
    <div class="row d-flex flex-column">
        <div class="col-lg-3" style="float:left" overflow:auto>
            <p>NAME: @item.CardName</p>
            <p>TYPE: @item.CardType</p>
            <p>SET: @item.Set</p>
            <p>DECK: @item.Deck</p>
        </div>
        <div class="col-lg-9">
        @* image *@
            <input type="image" class="MyImage" src="..\..\@Url.Content(item.ImageURL)" onclick="addToDeckList('@item.CardName');" />
        </div>
    </div>
    }
</div>
<div class="container col-lg-3">
    <div class="row">
        @* DeckList *@
        @for (int x = 0; x < 10; ++x)
        {
            sID = "DL" + x.ToString();
            <div id="@sID">
            </div>
        }
    </div>
</div>
<script src="~/Scripts/MyJavaScript.js"></script>